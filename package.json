{
  "name": "npm-module-template",
  "version": "0.0.1",
  "engines": {
    "node": ">=8.1.2"
  },
  "description": "Template project for building KrimZen Ninja npm templates",
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run docs && npm run clean",
    "build": "babel src -d lib --copy-files --source-maps",
    "watch": "npm-watch",
    "test": "jest",
    "unit-test": "nyc mocha \"test/**/*.unit.js\"",
    "prettier": "prettier --write --tab-width=4 --single-quote=true --print-width=120 \"{src,test}/**/*.js\"",
    "lint": "eslint src test --fix",
    "lint-ci": "eslint src test",
    "flow": "flow check",
    "docs": "documentation readme src --section=API",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "prepublish": "npm run prettier && npm run lint-ci && npm t && npm run flow && npm run build",
    "postpublish": "git push origin master --follow-tags"
  },
  "watch": {
    "test": "{src,test}/*.js",
    "lint-ci": "{src,test}/*.js"
  },
  "jest": {
    "testRegex": "/test/.*",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrimzenNinja/npm-module-template.git"
  },
  "keywords": [
    "KrimZenNinja",
    "npm"
  ],
  "author": "Ryan Kotzen <potz666@gmail.com> (http://blog.exigentcoder.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KrimzenNinja/npm-module-template/issues"
  },
  "homepage": "https://github.com/KrimzenNinja/npm-module-template#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-flow": "^6.23.0",
    "documentation": "4.0.0-rc.1",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.2.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-flowtype-errors": "^3.0.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.50.0",
    "jest-cli": "^20.0.0",
    "npm-watch": "^0.2.0",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1"
  }
}
